{
  "name": "unitestingtask",
  "version": "0.0.1",
  "description": "Unit testing task",
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "scripts": {
    "test": "jest --coverage",
    "test-watch": "jest --watchAll"
  },
  "devDependencies": {
    "jest": "^29.1.2"
  }
}
